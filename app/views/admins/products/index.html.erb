<div class="container">
	<div class="col-xs-12">
		<h2 class="my-4 title-h3">管理者用/商品一覧</h2>
		<%= form_tag admins_products_path, :method => 'get' do %>
			<%= text_field_tag :search, params[:search] %>
			<%= submit_tag 'Search', :name => nil %>
		<% end %>
    <hr>
	<div class="row product_show">
		<table class="table table-hover">
			<tbody>
				<tr>
					<td class="admin_td">商品ID</td>
					<td class="admin_td">販売者</td>
					<td class="admin_td">ユーザー名</td>
					<td class="admin_td">商品名</td>
					<td class="admin_td">値段</td>
					<td class="admin_td">URL</td>
					<td></td>
					<td></td>
					<td></td>
				</tr>
				<% @products.each do |product| %>
					<tr>
						<td><%= product.id %></td>
						<td><%= product.user.last_name %><%= product.user.first_name %></td>
						<td><%= product.user.nickname %></td>
						<td><%= product.title %></td>
						<td><%= number_to_currency(product.price, :locale => 'jp') %></td>
						<td><%= product.url %></td>
						<td><%= link_to "詳細", admins_product_path(product.id), class: "btn btn-success" %></td>
						<td><%= link_to "削除", admins_product_path(product.id), method: :delete, class: "btn btn-danger", data: { confirm: '本当に消しますか?'} %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-sm-12 text-center">
		<%= paginate @products, class: "pagenate" %>
	</div>
</div>
</div>



