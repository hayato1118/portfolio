
<!-- 管理者用index -->
<div class="container">
	<div class="row">
		<h1>管理者用/ユーザー一覧</h1>
		<table class="table table-hover">
			<tbody>
				<tr>
					<td>名前</td>
					<td>メールアドレス</td>
					<td>電話番号</td>
					<td>住所</td>
					<td></td>
					<td></td>
				</tr>
				<% @users.each do |user| %>
					<tr>
						<td><%= user.last_name %><%= user.first_name %></td>
						<td><%= user.email %></td>
						<td><%= user.phone_number1 %><%= user.phone_number2 %><%= user.phone_number3 %></td>
						<td><%= user.state %><%= user.city %><%= user.street %></td>
						<td><%= link_to "詳細", admins_user_path(user.id), class: "btn btn-success" %></td>
						<td><%= link_to "削除", admins_user_path(user.id), method: :delete, class: "btn btn-danger", data: { confirm: '本当に消しますか?'} %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
