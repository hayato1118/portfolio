<div class="container">
    <ol class="stepBar">
<li class="visited"><span>1</span><br>入力</li>
<li class="visited"><span>2</span><br>内容確認</li>
<li><span>3</span><br>問い合わせ完了</li>
</ol>
    <div class="row">
        <div class="col-xs-12">
            <h1 class="my-4">内容確認</h1>
            <hr>
            <%= form_for @contact, url: contacts_path , html: {method: "POST"} do |f| %>
             <div class="col-md-6">
                <div class="col-xs-12">
                    <hr>
                    <div class="col-md-2 col-xs-12">
                         <label class="contact_td">名前</label>
                    </div>
                   <div class="col-md-8 col-md-offset-1 contact_confirm">
                        <%= @contact.name %>
                    </div>
                </div>

                <div class="col-xs-12">
                    <hr>
                    <div class="col-md-2 col-xs-12">
                        <label class="contact_td">ユーザー名</label>
                    </div>
                   <div class="col-md-8 col-md-offset-1 contact_confirm">
                       <%= @contact.nick_name %>
                    </div>
                </div>

                <div class="col-xs-12">
                    <hr>
                    <div class="col-md-2 col-xs-12">
                         <label class="contact_td">メールアドレス</label>
                    </div>
                    <div class="col-md-8 col-md-offset-1 contact_confirm">
                       <%= @contact.email %>
                    </div>
                </div>

                <div class="col-xs-12">
                    <hr>
                    <div class="col-md-2 col-xs-12">
                         <label class="contact_td">電話番号</label>
                    </div>
                  <div class="col-md-8 col-md-offset-1 contact_confirm">
                        <%= @contact.phone %>
                    </div>
                </div>
            </div>
                <div class="col-md-6">
                    <hr>
                    <div class="col-md-2 col-xs-12">
                         <label class="contact_td">内容</label>
                    </div>
                    <div class="col-md-10 contact_confirm">
                        <%= @contact.message %>
                    </div>
                </div>

                <div class="col-xs-12">
                    <hr>
                    <%= link_to "キャンセル" ,homes_path, class: "btn btn-default col-xs-3 col-xs-offset-2" %>
                    <%= f.submit "送信", class: "btn btn-primary col-xs-3 col-xs-offset-2" %>
                </div>
            <% end %>
        </div>
    </div>
</div>