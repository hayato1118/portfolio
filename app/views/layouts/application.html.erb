<!DOCTYPE html>
<html>
  <head>
        <meta charset="utf-8">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.0.7/css/swiper.min.css" />
     <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.0.7/js/swiper.min.js"></script>
  </head>


<body class='<%= "#{controller.controller_name}" %>'>

<header>
	<div class="col-xs-12 header_nav">
	<div class="col-xs-1 text_header-left text-center">
		<li class="icon-position">
			<div id="nav-drawer">
				<input id="nav-input" type="checkbox" class="nav-unshown">
				<label id="nav-open" for="nav-input"><span></span></label>
				<label class="nav-unshown" id="nav-close" for="nav-input"></label>
				<div id="nav-content">
				<!--サイドメニュー-->
					<% if user_signed_in? %>
					<!--ログイン中のヘッダー-->
						<div class="col-xs-6 col-xs-offset-3">
							<%= attachment_image_tag @user, :profile_image,fallback: "no_image_top.jpg",class: "img-circle img-thumbnail" %>
						</div>

						<div class="col-xs-12 text-center">
							<%= current_user.nickname %>
						</div>

						<!-- 登録のユーザー名 -->
						<div class="col-xs-12 text-center">
							<div class="container-icon col-xs-2 col-xs-offset-3 text-center">
								<%= link_to "https://www.facebook.com/#{current_user.facebook_id}" do %>
									<i class="facebook fa fa-facebook-square target" style="font-size:30px"></i>
								<% end %>
							</div>

							<!-- 登録のユーザー名 -->
							<div class="container-icon col-xs-2 text-center">
								<%= link_to "https://twitter.com/#{current_user.twitter_id}" do %>
									<i class="twitter fa fa-twitter-square target" style="font-size:30px"></i>
								<% end %>
							</div>

							<!-- 登録のユーザー名 -->
							<div class="container-icon col-xs-2 text-center ">
								<%= link_to "https://www.instagram.com/#{current_user.instagram_id}" do %>
									<i class="instagram fa fa-instagram target" style="font-size:30px"></i>
								<% end %>
							</div>
						</div>

						<div class="col-xs-8 col-xs-offset-2 text-left cp_link slide_icon">
							<%= link_to user_path(current_user.id),:method => :GET do %>
								<i class="side_list glyphicon glyphicon-user"></i>マイページ
							<% end %>
						</div>


						<div class="col-xs-8 col-xs-offset-2 text-left cp_link slide_icon">
							<%= link_to user_favorite_path(current_user.id),:method => :GET do %>
								<i class="side_list glyphicon glyphicon-user"></i>お気に入り
							<% end %>
						</div>

						<div class="col-xs-8 col-xs-offset-2 text-left cp_link slide_icon">
							<%= link_to root_path,:method => :GET do %>
								<i class="side_list glyphicon glyphicon-user"></i>販売中商品
							<% end %>
						</div>


						<% else %>
						<!--ログアウト中のヘッダー-->
							<div class="col-xs-6 col-xs-offset-3">
								<%= attachment_image_tag @user, :profile_image,fallback: "no_image_top.jpg",class: "img-circle img-thumbnail" %>
							</div>

							<div class="col-xs-8 col-xs-offset-2 text-left cp_link slide_icon">
								<%= link_to new_user_session_path, :method => :GET do %>
									<i class="glyphicon glyphicon-log-in"></i>ログイン
								<% end %>
							</div>

							<div class="col-xs-8 col-xs-offset-2 text-left cp_link slide_icon">
								<%= link_to new_user_registration_path, :method => :GET do %>
									<i class="glyphicon glyphicon-edit"></i>新規登録
								<% end %>
							</div>
					<% end %>
				</div>
			</div>
		</li>
	</div>

	<!--ログイン中のヘッダー-->
	<% if user_signed_in? %>
		<ul>
			<div class="col-xs-2 text-center text_header-right">
				<li class="">
				<% if user_signed_in? %>
						<%=link_to "カート", cart_path(current_user.cart.id) ,class: "text-center"%>
				<% end %>
				</li>
			</div>

			<div class="col-xs-2 text-center text_header-right">
				<li class="">
					<%= link_to "商品一覧", products_path ,class: "text-center"%>
				</li>
			</div>
			<div class="col-xs-2 text-center text_header-right">
				<li class="">
				<% if user_signed_in? %>
						<%=link_to "ロゴ", root_path ,class: "text-center"%>
				<% end %>
				</li>
			</div>

			<div class="col-xs-2 text-center text_header-right">
				<li class="">
					<%= link_to "商品登録", new_product_path ,class: "text-center"%>
				</li>
			</div>

			<div class="col-xs-2 text-center text_header-right">
				<li class="">
					<%= link_to "ログアウト", destroy_user_session_path, :method => :delete ,class: "text-center" %>
				</li>
			</div>
			<div class="col-xs-1 text-center text_header-right">
				<li class="">
				</li>
			</div>
		</ul>
	<% else %>

	<!--ログアウト中のヘッダー-->
		<ul>
			<div class="col-xs-2 text-center text_header-right">
				<li class="">
				<% if user_signed_in? %>
						<%=link_to "商品一覧", products_path ,class: "text-center"%>
				<% end %>
				</li>
			</div>

			<div class="col-xs-2 text-center text_header-right">
				<li class="">
					<%= link_to "商品一覧", products_path ,class: "text-center"%>
				</li>
			</div>
			<div class="col-xs-2 text-center text_header-right">
				<li class="">
				<% if user_signed_in? %>
						<%=link_to "ロゴ", root_path ,class: "text-center"%>
				<% end %>
				</li>
			</div>

			<div class="col-xs-2 text-center text_header-right">
				<li class="">
					<%= link_to "新規登録", new_user_registration_path ,class: "text-center"%>
				</li>
			</div>

			<div class="col-xs-2 text-center text_header-right">
				<li class="">
					<%= link_to "ログイン", new_user_session_path ,class: "text-center"%>
				</li>
			</div>
			<div class="col-xs-1 text-center text_header-right">
				<li class="">
				</li>
			</div>
		</ul>
	<% end %>
</div>
</header>

<p id="notice"></p>

<%= yield %>

</body>
</html>



