<!DOCTYPE html>
<html>
  <head>
        <meta charset="utf-8">
    <%= csrf_meta_tags %>

<!-- turbolinks を無効にする中 -->

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.0.7/css/swiper.min.css" />
     <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.0.7/js/swiper.min.js"></script>
  </head>


<body class='<%= "#{controller.controller_name}" %>'>

<header>

	
<% if admin_signed_in? %>
<div clas="col-xs-12">
	<label>管理者がログイン中です。</label>
</div>
<% end %>
<div class="col-xs-12 header_nav">
		<div class="col-xs-2 text_header-left text-center">
			<% if user_signed_in? %>
				<div id="nav-drawer">
					<input id="nav-input" type="checkbox" class="nav-unshown">
					<label id="nav-open" for="nav-input" class="position_header">マイページ</label>
					<label class="nav-unshown" id="nav-close" for="nav-input"></label>
					<div id="nav-content">
						<p id="side_notice"></p>
						<!--サイドメニュー-->
						<% if user_signed_in? %>

							<!--ログイン中のヘッダー-->
							<div>
								<%= attachment_image_tag @products.user, :profile_image,fallback: "no_image_top.jpg",class: "img-circle img-thumbnail slide_icon_image" %>
							</div>

							<div class="col-xs-12 text-center side_user_name">
								<%= @products.user.nickname %>
							</div>

							<!-- 登録のユーザー名 -->
							<div class="col-xs-12 list-hover-slide">
							      <div><%= link_to "Facebook", "https://www.facebook.com/#{@products.user.facebook_id}", class: "side_menu_sns" %></div>
							      <div><%= link_to "Twitter", "https://twitter.com/#{@products.user.twitter_id}", class: "side_menu_sns" %></div>
							      <div><%= link_to "Instagram", "https://www.instagram.com/#{@products.user.instagram_id}", class: "side_menu_sns" %></div>
							</div>


<div><%= link_to "ユーザーページ" , user_path(@products.user.id) , class: "side_menu_list" %></div>

							<div><%= link_to "販売中商品" , user_sale_path(@products.user.id) , class: "side_menu_list" %></div>

						<% else %>
							<!--ログアウト中のヘッダー-->
							<div class="col-xs-6 col-xs-offset-3">
								<%= attachment_image_tag @user, :profile_image,fallback: "no_image_top.jpg",class: "img-circle img-thumbnail" %>
							</div>

							<div><%= link_to "ログイン". new_user_session_path , class: "side_menu_list" %></div>

							<div><%= link_to "新規登録", new_user_registration_path , class: "side_menu_list" %></div>

								<% end %>
							</div>
					</div>
			<% end %>
		</div>

		<!--ログイン中のヘッダー-->
		<% if user_signed_in? %>
										<ul class="snip1226">
							<div class="col-xs-2 text-center text_header-right">
								<li class="">
									<%= link_to "商品一覧", products_path ,class: "text-center css_change"%>
								</li>
							</div>

							<div class="col-xs-4 text-center text_header-right">
								<li class="">
									<%=link_to "ロゴ", root_path ,class: "text-center css_change" %>
								</li>
							</div>

							<div class="col-xs-2 text-center text_header-right">
								<li class="">
									<%=link_to "カート", cart_path(current_user.cart.id) ,class: "text-center css_change"%>
								</li>
							</div>


							<div class="col-xs-2 text-center text_header-right">
								<li class="">
									<%= link_to "ログアウト", destroy_user_session_path, :method => :delete ,class: "text-center css_change" %>
								</li>
							</div>
						</ul>

		<% else %>
		<!--ログアウト中のヘッダー-->
						<ul class="snip1226">
							<div class="col-xs-2 text-center text_header-right">
								<li class="">
									<%= link_to "商品一覧", products_path ,class: "text-center css_change" %>
								</li>
							</div>

							<div class="col-xs-4 text-center text_header-right">
								<li class="">
									<%=link_to "ロゴ", root_path ,class: "text-center css_change" %>
								</li>
							</div>

							<div class="col-xs-2 text-center text_header-right">
								<li class="">
									<button class="btn btn-link button-link css_change" id="modal-open" type="button">Signup|Login</button>
								</li>
							</div>
						</ul>
		<% end %>
	</div>
</header>

  <div class="main">
  <!--モーダルのコンテンツ-->
  <div id="modal-content" class="container">
    <div id="modal-content-innar">
      <!-- モーダルウィンドウのコンテンツ開始 -->
      <div class="row">
        <div class="col-sm-6">
          <h3 class="login-h3">ログイン</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="field">
			<%= f.label :email %><br />
			<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
			</div>
          <div class="field">
            <%= f.label :password %>
            <br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
          <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end -%>
          <div class="actions">
            <%= f.submit "Log in", class:"btn btn btn-primary" %>
          </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <button type="button" class="close batu" id="modal-close">&times;</button>
            <h3 class="sign_up-h3">新規登録</h3>
            <%= link_to "新規登録", "/users/sign_up", {:class => "btn btn-success btn-sign_up col-sm-12 btn-p"} %>
            <%= link_to "Facebookで登録", '#', {:class => "btn btn-facebook col-sm-12 btn-p"} %>
            <%= link_to "Twitterで登録", '#', {:class => "btn btn-twitter col-sm-12 btn-p"} %>
            <%= link_to "Googleで登録", '#', {:class => "btn btn-google col-sm-12 btn-p"} %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

  <!--モーダルのコンテンツ-->

	<p id="notice"></p>

	<%= yield %>



