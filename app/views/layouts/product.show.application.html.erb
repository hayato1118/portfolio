<!DOCTYPE html>
<html>
  <head>
        <meta charset="utf-8">
    <%= csrf_meta_tags %>

<!-- turbolinks を無効にする中 -->

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.0.7/css/swiper.min.css" />
     <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.0.7/js/swiper.min.js"></script>
  </head>


<body class='<%= "#{controller.controller_name}" %>'>

<header>
	<div class="col-xs-12 header_nav">
		<div class="col-xs-2 text_header-left text-center">
			<% if user_signed_in? %>
			<li class="icon-position">
				<div id="nav-drawer">
					<input id="nav-input" type="checkbox" class="nav-unshown">
					<label id="nav-open" for="nav-input">マイページ</label>
					<label class="nav-unshown" id="nav-close" for="nav-input"></label>
					<div id="nav-content">
						<p id="side_notice"></p>
						<!--サイドメニュー-->
						<% if user_signed_in? %>

							<!--ログイン中のヘッダー-->
							<div>
								<%= attachment_image_tag @products.user, :profile_image,fallback: "no_image_top.jpg",class: "img-circle img-thumbnail slide_icon_image" %>
							</div>

							<div class="col-xs-12 text-center">
								<%= @products.user.nickname %>
							</div>

							<!-- 登録のユーザー名 -->
							<div class="col-xs-12 text-center">
								<div class="container-icon col-xs-2 col-xs-offset-3 text-center">
									<%= link_to "https://www.facebook.com/#{@products.user.facebook_id}" do %>
										<i class="facebook fa fa-facebook-square target" style="font-size:30px"></i>
									<% end %>
								</div>

								<!-- 登録のユーザー名 -->
								<div class="container-icon col-xs-2 text-center">
									<%= link_to "https://twitter.com/#{@products.user.twitter_id}" do %>
										<i class="twitter fa fa-twitter-square target" style="font-size:30px"></i>
									<% end %>
								</div>

								<!-- 登録のユーザー名 -->
								<div class="container-icon col-xs-2 text-center ">
									<%= link_to "https://www.instagram.com/#{@products.user.instagram_id}" do %>
										<i class="instagram fa fa-instagram target" style="font-size:30px"></i>
									<% end %>
								</div>
							</div>

							<div class="col-xs-8 col-xs-offset-2 text-left cp_link slide_icon">
								<%= link_to user_path(@products.user.id),:method => :GET do %>
									<i class="side_list glyphicon glyphicon-user"></i>ユーザーページ
								<% end %>
							</div>


							<div class="col-xs-8 col-xs-offset-2 text-left cp_link slide_icon">
								<%= link_to user_sale_path(@products.user.id),:method => :GET do %>
									<i class="side_list glyphicon glyphicon-user"></i>販売中商品
								<% end %>
							</div>


						<% else %>
							<!--ログアウト中のヘッダー-->
							<div class="col-xs-6 col-xs-offset-3">
								<%= attachment_image_tag @user, :profile_image,fallback: "no_image_top.jpg",class: "img-circle img-thumbnail" %>
							</div>

							<div class="col-xs-8 col-xs-offset-2 text-left cp_link slide_icon">
								<%= link_to new_user_session_path, :method => :GET do %>
									<i class="glyphicon glyphicon-log-in"></i>ログイン
								<% end %>
							</div>

							<div class="col-xs-8 col-xs-offset-2 text-left cp_link slide_icon">
								<%= link_to new_user_registration_path, :method => :GET do %>
									<i class="glyphicon glyphicon-edit"></i>新規登録
								<% end %>
							</div>
						<% end %>
					</div>
				</div>
			</li>
			<% end %>
		</div>

		<!--ログイン中のヘッダー-->
		<% if user_signed_in? %>
				<ul>
					<div class="col-xs-2 text-center text_header-right">
						<li class="">
							<%= link_to "商品一覧", products_path ,class: "text-center"%>
						</li>
					</div>

					<div class="col-xs-4 text-center text_header-right">
						<li class="">
							<%=link_to "ロゴ", root_path ,class: "text-center"%>
						</li>
					</div>

					<div class="col-xs-2 text-center text_header-right">
						<li class="">
							<%=link_to "カート", cart_path(current_user.cart.id) ,class: "text-center"%>
						</li>
					</div>


					<div class="col-xs-2 text-center text_header-right">
						<li class="">
							<%= link_to "ログアウト", destroy_user_session_path, :method => :delete ,class: "text-center" %>
						</li>
					</div>
				</ul>

		<% else %>

				<!--ログアウト中のヘッダー-->
			<ul>
							<div class="col-xs-2 text-center text_header-right">
								<li class="">
									<%= link_to "商品一覧", products_path ,class: "text-center"%>
								</li>
							</div>

							<div class="col-xs-4 text-center text_header-right">
								<li class="">
									<%=link_to "ロゴ", root_path ,class: "text-center"%>
								</li>
							</div>

							<div class="col-xs-2 text-center text_header-right">
								<li class="">
									<button class="btn btn-link button-link" id="modal-open" type="button">Signup|Login</button>
								</li>
							</div>
						</ul>
		<% end %>
	</div>
</header>

  <div class="main">
  <!--モーダルのコンテンツ-->
  <div id="modal-content" class="container">
    <div id="modal-content-innar">
      <!-- モーダルウィンドウのコンテンツ開始 -->
      <div class="row">
        <div class="col-sm-6">
          <h3 class="login-h3">ログイン</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="field">
			<%= f.label :email %><br />
			<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
			</div>
          <div class="field">
            <%= f.label :password %>
            <br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
          <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end -%>
          <div class="actions">
            <%= f.submit "Log in", class:"btn btn btn-primary" %>
          </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <button type="button" class="close batu" id="modal-close">&times;</button>
            <h3 class="sign_up-h3">新規登録</h3>
            <%= link_to "新規登録", "/users/sign_up", {:class => "btn btn-success btn-sign_up col-sm-12 btn-p"} %>
            <%= link_to "Facebookで登録", '#', {:class => "btn btn-facebook col-sm-12 btn-p"} %>
            <%= link_to "Twitterで登録", '#', {:class => "btn btn-twitter col-sm-12 btn-p"} %>
            <%= link_to "Googleで登録", '#', {:class => "btn btn-google col-sm-12 btn-p"} %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

  <!--モーダルのコンテンツ-->

	<p id="notice"></p>

	<%= yield %>



<footer>
	<div class="col-xs-12">
		<hr>
		<div class="col-xs-6 col-md-3">
			<ul>
				<h5>サイト説明</h5>
				<li>How To Use</li>
				<li>Q&A</li>
				<li>Contact</li>
			</ul>
		</div>
		<div class="col-xs-6 col-md-5">
			<ul>
				<h5>My Web Site Social Networking Service</h5>
				<li><%= link_to "Twitter" , "https://twitter.com/CodeCellars/" %></li>
				<li><%= link_to "Facebook" , "https://www.facebook.com/profile.php?id=100024524379559" %></li>
				<li><%= link_to "Instagram" , "https://www.instagram.com/code.cellars/" %></li>
				<li><%= link_to "GitHub" , "https://github.com/hayato1118/" %></li>
			</ul>
		</div>
				<div class="col-md-4">
			<ul>
				<h3 class="col-xs-12">CODE CELLARS</h3>

				<div class="col-xs-6">
					<h5 class="col-xs-12">会員人数</h5>
					<h4 class="col-xs-12"><%=User.count(:id) %></h4>
					<li class="col-xs-12">persons</li>
				</div>
				<div class="col-xs-6">
					<h5 class="col-xs-12">アイテム数</h5>
					<h4 class="col-xs-12"><%=Product.count(:id) %></h4>
					<li class="col-xs-12">items</li>
				</div>

			</ul>
		</div>
	</div>

	<div class="col-xs-12">
		<hr>
		<div class="col-md-8">
			<ul>
				<li>©️ 2018 HAYATO NAKAMURA </li>
			</ul>
		</div>


