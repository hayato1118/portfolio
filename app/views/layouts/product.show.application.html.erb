				<li><%= link_to 'How To Use', homes_path(anchor: 'how_to_use'), class: 'text-center' %></li>
				<li><%= link_to 'Q&A', homes_path(anchor: 'q_and_a'), class: 'text-center' %></li>
				<li><%= link_to 'Contact', homes_path(anchor: 'contact'), class: 'text-center' %></li>
			</ul>
		</div>
		<div class="col-xs-6 col-md-5">
			<ul>
				<h5>My Web Site Social Networking Service</h5>
