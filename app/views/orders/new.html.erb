<!-- 住所自動入力 -->
<script>
$(function () {
  $('#zip').jpostal({
    postcode : [
      '#zip'
    ],
    address : {
      '#address' :'%3',
      '#address2'  :'%4',
      '#address3'  :'%5',
    }
  });
});
</script>

<!-- カナ自動入力 -->
<script type="text/javascript">
    $(document).ready(
        function() {
            $.fn.autoKana('#last_name', '#last_name_kana', {
                katakana : false  //true：カタカナ、false：ひらがな（デフォルト）
        });
    });
        $(document).ready(
        function() {
            $.fn.autoKana('#first_name', '#first_name_kana', {
                katakana : false  //true：カタカナ、false：ひらがな（デフォルト）
        });
    });
</script>





<div class="container">


<ol class="stepBar">
<li class="visited"><span>1</span><br>カート</li>
<li class="visited"><span>2</span><br>注文内容</li>
<li><span>3</span><br>注文完了</li>
</ol>



	<h1 class="my-4">購入確認画面
		<small><%=current_user.nickname %>様</small>
	</h1>
	<hr>



<ul class="nav nav-tabs">
	<li class="active"><a href="#sampleContentA" data-toggle="tab">送付先情報</a></li>
	<li><a href="#sampleContentB" data-toggle="tab">登録者情報</a></li>
</ul>
<div class="tab-content">




	<div class="tab-pane active" id="sampleContentA">
			<div class="col-xs-12">
			<h4>送付先情報</h4>
		</div>
			<%= form_for @order do |f| %>
		<div class="row product_show">
			<div class="col-xs-12">
			<div class="col-xs-6">
				<%= image_tag 'no_image_top.jpg',class: "img-thumbnail img-responsive center-block order_image" %>
				<%#= attachment_image_tag current_user, :profile_image, fallback: "no_image_top.jpg", class: "img-thumbnail img-responsive center-block" %>
			</div>
			<div class="col-xs-6 profile_text">
				<table>
					<tbody>

						<tr>
							<td>名前:</td>
							<td class="col-xs-12">
								<%= f.text_field :last_name,  id: "last_name" , :value => current_user.last_name %>
								<%= f.text_field :first_name, id: "first_name" , :value => current_user.first_name %>
							</td>
						</tr>
						<tr>
							<td class="order_td">ふりがな:</td>
							<td class="col-xs-12">
								<%= f.text_field :last_name_kana, id: "last_name_kana" , :value => current_user.last_name_kana %>
								<%= f.text_field :first_name_kana, id: "first_name_kana" , :value => current_user.first_name_kana %>
							</td>
						</tr>
						<tr>
							<td>email:</td>
							<td class="col-xs-12">
								<%=f.text_field :email, id: "input" ,type: "text" ,:placeholder => "必須"%>
							</td>
						</tr>
						<tr>
							<td>電話:</td>
							<td class="col-xs-12">
								<%= f.telephone_field :phone_number1, :value => current_user.phone_number1,maxlength: 4  %>-
								<%= f.telephone_field :phone_number2, :value => current_user.phone_number2,maxlength: 4  %>-
								<%= f.telephone_field :phone_number3, :value => current_user.phone_number3,maxlength: 4 %>
							</td>
						</tr>
						<tr>
							<td class="order_td">郵便番号:</td>
							<td class="col-xs-12">
								<%= f.number_field :zip, id: "zip" , :value => current_user.zip %>
							</td>
						</tr>
						<tr>
							<td>住所:</td>
							<td class="col-xs-12">
								<%= f.text_field :state, id: "address" , :value => current_user.state %>
								<%= f.text_field :city, id: "address2" , :value => current_user.city %>
								<%= f.text_field :street, id: "address3" , :value => current_user.street %>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		</div>
	</div>







	<div class="tab-pane" id="sampleContentB">
		<div class="col-xs-12">
		<h4>登録者情報</h4>
		</div>
		<div class="row product_show">
			<div class="col-xs-12">
			<div class="col-xs-6">
				<%= attachment_image_tag current_user, :profile_image, fallback: "no_image_top.jpg", class: "img-thumbnail img-responsive center-block order_image" %>
			</div>
			<div class="col-xs-6 profile_text">
				<table>
					<tbody>
						<tr>
							<td class="order_td">ふりがな:</td>
							<td class="col-xs-12"><%= current_user.last_name_kana %><%= current_user.first_name_kana %></td>
						</tr>
						<tr>
							<td>名前:</td>
							<td class="col-xs-12"><%= current_user.last_name %><%= current_user.first_name %></td>
						</tr>
						<tr>
							<td class="order_td">ユーザー名:</td>
							<td class="col-xs-12"><%= current_user.nickname %></td>
						</tr>
						<tr>
							<td>email:</td>
							<td class="col-xs-12"><%=current_user.email %></td>
						</tr>
						<tr>
							<td>電話:</td>
							<td class="col-xs-12"><%= current_user.phone_number1 %>-<%= current_user.phone_number2 %>-<%= current_user.phone_number3 %></td>
						</tr>
						<tr>
							<td class="order_td">郵便番号:</td>
							<td class="col-xs-12"><%= current_user.zip %></td>
						</tr>
						<tr>
							<td>住所:</td>
							<td class="col-xs-12"><%= current_user.state %><%= current_user.city %><%= current_user.street %></td>
						</tr>
						<tr>
							<td></td>
							<td class="col-xs-12"><%= link_to "購入者情報変更", edit_user_path(current_user.id), class: "btn-sm btn btn-default" %></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	</div>
	<hr>
</div>
<div class="col-xs-12">
	<h4>商品情報</h4>
</div>
<div class="product_show">
	<table class="table table-hover">
		<tbody>
			<tr>
				<td></td>
				<td>商品名</td>
				<td>販売者</td>
				<td>価格</td>
			</tr>
			<% sum =0 %>
			<% total_count = 0 %>
			<% current_user.cart.product_carts.each do |product_cart| %>
			<% sum += product_cart.product.price %>
			<% total_count += product_cart.quantity %>
			<tr>
				<td>商品ID:<%= product_cart.product.id   %></td>
				<td><%= product_cart.product.title  %></td>
				<td><%= product_cart.product.user.nickname %></td>
				<td><%= product_cart.product.price %>円(税込)</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<hr>
</div>


<div class="col-xs-12 cart_info">
	<hr>
	<table>
		<tbody>
			<tr>
				<td class="col-xs-4"></td>
				<td class="col-xs-3"></td>
				<td class="col-xs-1">
					<table>
						<tbody>
							<tr>
								<td class="order_td">送付先：<span id="output"></span></td>
							</tr>
							<tr>
								<td>数量：<%= total_count %></td>
							</tr>
						</tbody>
					</table>
				</td>
				<td class="col-xs-2 order_td">合計金額：<h3 class="order_price"><%= sum %></h3>円（税込）</td>
				<td class="col-xs-2"></td>
			</tr>
		</tbody>
	</table>
	<hr>
</div>

<div class="col-xs-12">
<hr>
<%= link_to "カートに戻る", cart_path(current_user.id) ,class: "btn btn-default col-xs-2 col-xs-offset-2" %>
<%= link_to "買い物を続ける", products_path ,class: "btn btn-default col-xs-2 col-xs-offset-1" %>
<%= f.submit "購入", class: "btn btn-success col-xs-2 col-xs-offset-1" %>
<% end %>
</div>
</div>



							<script>
							$(function() {
							  var $input = $('#input');
							  var $output = $('#output');
							  $input.on('input', function(event) {
							    var value = $input.val();
							    $output.text(value);
							  });
							});
							</script>
