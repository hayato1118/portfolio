<div class="container">
	<h1 class="my-4">購入確認画面
		<small><%=current_user.nickname %>様</small>
	</h1>
	<hr>



<ul class="nav nav-tabs">
	<li class="active"><a href="#sampleContentA" data-toggle="tab">注文者情報</a></li>
	<li><a href="#sampleContentB" data-toggle="tab">登録者情報</a></li>
</ul>
<div class="tab-content">




	<div class="tab-pane active" id="sampleContentA">
			<div class="col-xs-12">
			<h4>注文者情報</h4>
		</div>
			<%= form_for @order do |f| %>
		<div class="row product_show">
			<div class="col-xs-12">
			<div class="col-xs-6">
				<%= attachment_image_tag current_user, :profile_image, fallback: "no_image_top.jpg", class: "img-thumbnail img-responsive center-block" %>
			</div>
			<div class="col-xs-6 profile_text">
				<table>
					<tbody>
						<tr>
							<td class="">ふりがな:</td>
							<td class="col-xs-12">
								<%= f.text_field :last_name_kana, :value => current_user.last_name_kana %>
								<%= f.text_field :first_name_kana, :value => current_user.first_name_kana %>
							</td>
						</tr>
						<tr>
							<td>名前:</td>
							<td class="col-xs-12">
								<%= f.text_field :last_name, :value => current_user.last_name %>
								<%= f.text_field :first_name, :value => current_user.first_name %>
							</td>
						</tr>
						<tr>
							<td>email:</td>
							<td class="col-xs-12">
								<%= f.text_field :email, :value => current_user.email %>
							</td>
						</tr>
						<tr>
							<td>電話:</td>
							<td class="col-xs-12">
								<%= f.text_field :phone_number1, :value => current_user.phone_number1 %>-
								<%= f.text_field :phone_number2, :value => current_user.phone_number2 %>-
								<%= f.text_field :phone_number3, :value => current_user.phone_number3 %>
							</td>
						</tr>
						<tr>
							<td>郵便番号:</td>
							<td class="col-xs-12">
								<%= f.text_field :zip, :value => current_user.zip %>
							</td>
						</tr>
						<tr>
							<td>住所:</td>
							<td class="col-xs-12">
								<%= f.text_field :state, :value => current_user.state %>
								<%= f.text_field :city, :value => current_user.city %>
								<%= f.text_field :street, :value => current_user.street %>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		</div>
	</div>







	<div class="tab-pane" id="sampleContentB">
		<div class="col-xs-12">
		<h4>登録者情報</h4>
		</div>
		<div class="row product_show">
			<div class="col-xs-12">
			<div class="col-xs-6">
				<%= attachment_image_tag current_user, :profile_image, fallback: "no_image_top.jpg", class: "img-thumbnail img-responsive center-block" %>
			</div>
			<div class="col-xs-6 profile_text">
				<table>
					<tbody>
						<tr>
							<td class="">ふりがな:</td>
							<td class="col-xs-12"><%= current_user.last_name_kana %><%= current_user.first_name_kana %></td>
						</tr>
						<tr>
							<td>名前:</td>
							<td class="col-xs-12"><%= current_user.last_name %><%= current_user.first_name %></td>
						</tr>
						<tr>
							<td>ユーザー名:</td>
							<td class="col-xs-12"><%= current_user.nickname %></td>
						</tr>
						<tr>
							<td>email:</td>
							<td class="col-xs-12"><%=current_user.email %></td>
						</tr>
						<tr>
							<td>電話:</td>
							<td class="col-xs-12"><%= current_user.phone_number1 %>-<%= current_user.phone_number2 %>-<%= current_user.phone_number3 %></td>
						</tr>
						<tr>
							<td>郵便番号:</td>
							<td class="col-xs-12"><%= current_user.zip %></td>
						</tr>
						<tr>
							<td>住所:</td>
							<td class="col-xs-12"><%= current_user.state %><%= current_user.city %><%= current_user.street %></td>
						</tr>
						<tr>
							<td></td>
							<td class="col-xs-12"><%= link_to "購入者情報変更", edit_user_path(current_user.id), class: "btn-sm btn btn-default" %></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	</div>
	<hr>
</div>








			<div class="col-xs-12">
				<h4>商品情報</h4>
			</div>
			<div class="row product_show">
				<table classs="col-xs-12">
					<tbody>
					<% sum =0 %>
					<% current_user.cart.product_carts.each do |product_cart| %>
					<% sum += product_cart.product.price %>

					<tr>
						<td>商品番号:<%= product_cart.product.id   %></td>
						<td>商品名:<%= product_cart.product.title  %></td>
						<td>販売者:<%= product_cart.product.user.nickname %></td>
						<td>価格:<%= product_cart.product.price %>円(税込)</td>
					</tr>
					<% end %>
					</tbody>
				</table>
				<hr>
			</div>


			<div class="col-xs-12 cart_info">
				<hr>
				<table>
					<tbody>
						<tr>
							<td class="col-xs-4"></td>
							<td class="col-xs-3"></td>
							<td class="col-xs-1">
								<table>
									<tbody>
										<tr>
											<td>送付先：<%= current_user.email %></td>
										</tr>
										<tr>
											<td>数量：</td>
										</tr>
										<tr>
											<td>商品合計：</td>
										</tr>
									</tbody>
								</table>
							</td>
							<td class="col-xs-2">合計金額：<%= sum %>円（税込）</td>
							<td class="col-xs-2"></td>
						</tr>
					</tbody>
				</table>
				<hr>
			</div>

<div class="col-xs-12">
<hr>
<%= link_to "カートに戻る", cart_path(current_user.id) ,class: "btn-sm btn btn-default" %>
<%= link_to "買い物を続ける", products_path ,class: "btn-sm btn btn-default" %>
<%= f.submit "購入", class: "btn-sm btn btn-success" %>
<% end %>
</div>
</div>