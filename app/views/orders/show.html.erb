<div class="container">
	<h1 class="my-4">領収証</h1>
	<div class="row">
		<table class="table">
			<tbody>
				<tr>
					<td>注文ID</td>
					<td>販売者</td>
					<td>購入者</td>
					<td>商品名</td>
					<td>値段</td>
					<td>購入日時</td>
				</tr>
					<% sum =0 %>
					<% total_count = 0 %>
					<% @order.product_orders.each do |product_order| %>

					<% sum += product_order.product.price %>

					<% @order.product_orders.each_with_index do |product_order,i| %>
					<% total_count = i + 1 %>
					<% end %>

					<tr>
						<td><%= @order.id %></td>
						<td><%= product_order.product.user.nickname%></td>
						<td><%= @order.user.last_name %><%= @order.user.first_name %></td>
						<td><%= product_order.product.title %></td>
						<td><%= product_order.product.price %>円(税込)</td>
						<td><%= @order.created_at.strftime("%m#{"月"}%d#{"日"}%R") %></td>
					</tr>
						<% end %>
			</tbody>
		</table>
	</div>
</div>


<div class="col-xs-12">
	<hr>
	<table>
		<tbody>
			<tr>
				<td class="col-xs-4"></td>
				<td class="col-xs-3"></td>
				<td class="col-xs-1">
					<table>
						<tbody>
							<tr>
								<td>送付先：<span id="output"></span></td>
							</tr>
							<tr>
								<td>数量：<%= total_count %></td>
							</tr>
						</tbody>
					</table>
				</td>
				<td class="col-xs-2">合計金額：<h3 class="order_price"><%= sum %></h3>円（税込）</td>
				<td class="col-xs-2"></td>
			</tr>
		</tbody>
	</table>
	<hr>
</div>


