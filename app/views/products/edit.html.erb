<div class="row product_show">
	<%= nested_form_for(@products) do |f| %>
		<div class="col-md-8 text-center">
			<%= attachment_image_tag @products, :image ,class: "product_show_image" %>
		</div>


		<div class="col-md-4">
			<ul class="nav nav-pills">
				<li class="active"><a href="#sampleContentA" data-toggle="tab">商品詳細</a></li>
				<li><a href="#sampleContentB" data-toggle="tab">商品説明</a></li>
			</ul>

			<!-- 内容 -->
			<div class="tab-content ">
				<!--   Aタブ部分    -->
				<div class="tab-pane  active col-md-12" id="sampleContentA">
						<hr>
						<h3 class="my-3">商品タイトル</h3>
						<%=f.text_field :title %>

						<hr>
						<h3 class="my-3">商品カテゴリー</h3>
						<%= collection_check_boxes(:product, :category_ids, Category.all, :id, :category_name) do |b| %>
							<%= b.label { b.check_box + b.text } %>
						<% end %>


						<hr>
						<h3 class="my-3">商品タグ</h3>
						<div class="box_srcollbar">
						<%= f.fields_for :tags do |tag_form| %>
						<%= tag_form.text_field :tag_name %>
						<%= tag_form.link_to_remove "フォーム削除" , class: "btn btn btn-danger" %>
						<% end %>
						<%= f.link_to_add "フォーム追加", :tags , class: "btn btn btn-primary" %>
						</div>
						<hr>
						<%= f.submit 'Update Product' ,class: "btn btn-primary" %>
						<%=link_to "キャンセル", product_path(@products) ,class: "btn btn-success" %>
				</div>

				<!--   Aタブ部分    -->


				<!--   Bタブ部分    -->
				<div class="tab-pane col-md-12" id="sampleContentB">
					<hr>
                        <h3 class="my-3">商品説明</h3>
                        <div class="admin_box_srcollbar panel panel-default">
                            <%=f.text_area :product_detail ,class: "product_text col-md-12" %>
                    </div>
				<!--   Bタブ部分    -->
			</div>
		</div>
	<% end %>
</div>










