
    <div class="container">
        <div class="col-md-12"> 
      <h2 class="my-4 title-h3">商品編集</h2>
  </div>
<hr>
<div class="row product_show">
	<%= nested_form_for(@products) do |f| %>
		<div class="col-md-8 text-center">
			<%= attachment_image_tag @products, :image ,class: "product_show_image" %>
		</div>


		<div class="col-md-4">
			<ul class="nav nav-tabs">
				<li class="active"><a href="#sampleContentA" data-toggle="tab">商品詳細</a></li>
				<li><a href="#sampleContentB" data-toggle="tab">商品説明</a></li>
				<li><a href="#sampleContentC" data-toggle="tab">商品タグ</a></li>
			</ul>

			<!-- 内容 -->
			<div class="tab-content ">
				<!--   Aタブ部分    -->
				<div class="tab-pane  active col-xs-12 box_scrollbar" id="sampleContentA">
						<hr>
						<h3 class="my-3">商品タイトル</h3>
						<%=f.text_field :title ,class: "col-xs-12", maxlength:30  %>
                        <hr>
						<h3 class="my-3">商品カテゴリー</h3>
						<%= collection_check_boxes(:product, :category_ids, Category.all, :id, :category_name) do |b| %>
							<%= b.label { b.check_box + b.text } %>
						<% end %>
				</div>

				<!--   Aタブ部分    -->

                <!--   Bタブ部分    -->
                    <div class="tab-pane col-xs-12 box_scrollbar" id="sampleContentB">
                        <hr>
                        <h3 class="my-3">商品説明</h3>
                        <div class="panel panel-default">
                            <%=f.text_area :product_detail ,class: "col-xs-12  edit_comment_scrollbar" , maxlength:300  %>
                    </div>
                </div>
                    <!--   Bタブ部分    -->

                    <!--   Cタブ部分    -->

                    <div class="tab-pane col-xs-12 box_scrollbar" id="sampleContentC">
                     <hr>
                        <h3 class="my-3">商品タグ</h3>
                        <div class=" panel panel-default edit_comment_scrollbar">
                            <%= f.fields_for :tags do |tag_form| %>
                                <%= tag_form.text_field :tag_name %>
                                <%= tag_form.link_to_remove "フォーム削除" , class: "btn btn btn-sm btn-danger" %>
                            <% end %>
                            <%= f.link_to_add "フォーム追加", :tags , class: "btn btn btn-sm btn-primary" %>
                        </div>
                    </div>
                    <!--   Cタブ部分    -->

                </div>
                 <%= f.submit '商品更新' ,class: "btn btn-primary" %>
                <%= link_to "キャンセル", product_path(@products),class: "btn btn-default" %>
            </div>
        </div>
    <% end %>
</div>






