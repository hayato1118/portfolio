<h1>Products#new</h1>
<p>Find me in app/views/products/new.html.erb</p>

<div class="row">
<div class="col-sm-10 col-sm-offset-1" style="background-color: orange;">
 <%= form_for @product do |f| %>
    <div class="field row">
      <%= f.attachment_field :image %>
    </div>
    <div class="field row">
      <label>Price </label>
      <%= f.number_field :price,min: 0,step: 100, class: "col-sm-12"%>
    </div>
    <div class="field row">
      <label>Title </label>
      <%= f.text_field :title, class: "col-sm-12"%>
    </div>
       <div class="field row">
      <label>Google drive URL</label>
      <%= f.text_field :url, class: "col-sm-12"%>
    </div>
    <div class="field row">
      <label>商品説明</label>
      <%= f.text_area :product_detail, class: " col-sm-12" %>
    </div>
    <div class="actions row">
      <%= f.submit "Create Product", class:"btn btn btn-primary col-sm-12" %>
    </div>
    <% end %>
</div>
</div>

