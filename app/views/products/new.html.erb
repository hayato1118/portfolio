<div class="row">
<div class="col-sm-10 col-sm-offset-1">

 <%= nested_form_for(@product) do |f| %>
    <div class="field row">
      <%= f.attachment_field :image %>
    </div>
    <div class="field row">
      <label>Price </label>
      <%= f.number_field :price,min: 0,step: 100, class: "col-sm-12"%>
    </div>
    <div class="field row">
      <label>Title </label>
      <%= f.text_field :title, class: "col-sm-12"%>
    </div>
       <div class="field row">
      <label>Google drive URL</label>
      <%= f.text_field :url, value: "https://drive.google.com/drive_or_file/〇〇〇〇/〇〇〇〇", class: "col-sm-12"%>
    </div>

     <div class="field row">
      <label>タグ</label>
    <%= f.fields_for :tags do |tag_form| %>
      <%= tag_form.text_field :tag_name %>
      <%= tag_form.link_to_remove "フォーム削除" , class: "btn btn btn-danger" %>
    <% end %>
    <%= f.link_to_add "フォーム追加", :tags , class: "btn btn btn-primary" %>
      </div>

    <div class="field row">
      <label>商品説明</label>
      <%= f.text_area :product_detail, class: " col-sm-12" %>
    </div>
    <div class="actions row">
      <%= f.submit "商品登録", class: "btn btn btn-primary col-sm-12" %>
    </div>
    <% end %>
</div>
</div>


