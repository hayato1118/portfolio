<div class="container">
<div class="col-xs-12"> 
    <h2 class="my-4 title-h3">お気に入り</h2>
    </div>
    <div class="row product_show">
        <% @user.favorite_products.each_with_index do |product, i| %>
        <hr>
            <div class="col-xs-12">
                <table>
                    <tbody>
                        <tr>
                            <td class="col-xs-4">商品ID：<%= product.id %></td>
                            <td class="col-xs-3">商品情報</td>
                            <td class="col-xs-1">価格</td>
                            <td class="col-xs-2"></td>
                        </tr>
                        <tr>
                            <td class="col-xs-4"><%= attachment_image_tag product, :image , class: "favorite_image" %></td>
                            <td class="col-xs-3">
                                <table>
                                    <tbody>
                                        <tr>
                                            <td class="user_td_cancer"><strong>商品名：</strong><%= product.title %></td>
                                        </tr>
                                        <tr>
                                            <td class=""><strong>販売者：</strong><%= product.user.nickname %></td>
                                        </tr>
                                        <tr>
                                            <td class=""><strong>商品登録日：</strong><%= product.created_at.strftime("%Y-%m-%d") %></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                            <td class="col-xs-1 user_td"><%= product.price %>円(税込)</td>
                            <td class="col-xs-2">
                                <%# binding.pry %>
                                <%= link_to "詳細", product_path(product.id), class: "btn-sm btn btn-default col-xs-12 text-center" %>
                                <%= link_to "削除",favorite_path(@favorites[i][:id]), method: :delete ,class: "btn btn-danger col-xs-12" , data: { confirm: '本当に消しますか?'} %>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <hr>
            </div>
        <% end %>
    </div>
</div>



