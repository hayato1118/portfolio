<div class="container pc">
	<div class="col-xs-12"> 
	<h2 class="my-4 title-h3">購入履歴</h2>
</div>
	<div class="row product_show">
		<% @user.orders.each do |order| %>
			<% order.product_orders.each do |product_order| %>
		<hr>
			<div class="col-md-12">
				<table>
					<tbody>
					<tr>
						<td class="col-md-4">注文番号：<%= order.id %></td>
						<td class="col-md-4">商品情報</td>
						<td class="col-md-2">価格</td>
						<td class="col-md-2"></td>
					</tr>
					<tr>
						<td class="col-md-4"><%= attachment_image_tag product_order.product, :image ,class: "order_history_image" %></td>
						<td class="col-md-4">
								<table>
									<tbody>
										<tr>
											<td class=""><strong>商品名：</strong><%= product_order.product.title %></td>
										</tr>
										<tr>
											<td class=""><strong>販売者：</strong><%= product_order.product.user.nickname %></td>
										</tr>
										<tr>
											<td class=""><strong>商品URL：</strong><%= product_order.product.url %></td>
										</tr>
										<tr>
											<td class="user_td_cancer"><strong>送付先：</strong><%= product_order.order.email %></td>
										</tr>
										<tr>
											<td class=""><strong>商品購入日：</strong><%= order.created_at.strftime("%Y-%m-%d") %></td>
										</tr>
									</tbody>
								</table>
						</td>
						<td class="col-md-2 user_td">商品価格：<%= product_order.product.price %>円(税込)<br>
							使用ポイント：<%= order.used_point %>ポイント<br>
							購入金額：<%= product_order.product.price - order.used_point %>円(税込)<br>
							<hr>
							獲得ポイント：<%= order.get_point %>ポイント
						</td>
						<td class="col-md-2">
							<%=link_to "商品詳細", product_path(product_order.product.id), class: "btn btn-sm btn-default col-md-12 text-center" %>
							<%= link_to "領収証", order_path(order) ,class: "btn btn-sm btn-default col-md-12 text-center" %>
						</td>
					</tr>
					</tbody>
				</table>
				<hr>
			</div>
			<% end %>
			<% end %>
		</div>
	</div>
</div>





