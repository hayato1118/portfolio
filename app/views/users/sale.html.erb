<div class="container">
  <div class="orders_history_title">
    <h1 style="display:inline;">販売中の商品</h1>
    <hr>
  </div>
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-xs-6 col-sm-4 col-md-3">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">注文番号：<%= product.id %></h3>
            </div>
              <div class="panel-body">
                <!--商品画像-->
                  <%= attachment_image_tag product, :image , class: "history_image" %>

                <label style="display:inline;">商品名</label>
                <h4 style="display:inline;" class="card-title">
                  <%= link_to product_path(product) do %>
                    <%= product.title %>
                  <% end %>
                </h4>
                <P><P><label>商品タイトル</label>
                  <%= product.title %></P></P>

                <P><label>値段</label>
                  <%= product.price %>円</P>

                <P><label>商品URL</label>
                  <%= product.url %></P>

                 <%= link_to "削除", user_path(current_user.id), method: :delete, class: "btn btn-danger col-xs-12", data: { confirm: '本当に消しますか?'} %>
              </div>
            </div>
          </div>
        <% end %>
    </div>
</div>