<div class="container">
   <div class="col-md-12"> 
		<h1 style="display:inline;">ユーザー情報</h1>
	    <hr>
    </div>
	
	<div class="row product_show">
		<div class="col-md-3 text-center">
	    	<%= attachment_image_tag @user, :profile_image, :fill, 200, 200,  fallback: "no_image_top.jpg",class: "img-thumbnail img-responsive center-block" %>
	    	<%= render 'follow_form' %>
	　　　   <%= render 'stats' ,class: "text-center" %>
	        <h3 class="my-3">登録情報</h3>
	        <ul>
	          <li class="text-left">名前：<%= @user.last_name %><%= @user.first_name %></li>
	          <li class="text-left">ふりがな：<%= @user.last_name_kana %><%= @user.first_name_kana %></li>
	          <li class="text-left">ユーザーネーム：<%= @user.nickname %></li>
	          <li class="text-left">電話番号：<%= @user.phone_number1 %><%= @user.phone_number2 %><%= @user.phone_number3 %></li>
	          <li class="text-left">メールアドレス：<%= @user.email %></li>
	          <li class="text-left">郵便番号：<%= @user.zip %></li>
	          <li class="text-left">住所：<%= @user.state %><%= @user.city %><%= @user.street %></li>
			  <li class="text-left">最終ログイン:<%= @user.current_sign_in_at.strftime("%m#{"月"}%d#{"日"}%R") %></li>
	        </ul>

			<% if @user == current_user || admin_signed_in? %>
			<%= link_to "編集", edit_user_path, class: "btn btn-success" %>
			<%= link_to "退会", user_path(@user), method: :delete, class: "btn btn-danger", data: { confirm: '退会時はユーザー情報は論理削除されて当サイトで1ヶ月の保管をさせていただいた後に完全削除をします。　承諾できますか?'} %>
			<% end %>

   		 </div>

	   	<div class="col-md-9">
	        <ul class="nav nav-pills">
	          <li class="active"><a href="#sampleContentA" data-toggle="tab">ユーザー情報</a></li>
	          <li><a href="#sampleContentB" data-toggle="tab">フォロー未完成</a></li>
	          <li><a href="#sampleContentC" data-toggle="tab">フォロワー未完成</a></li>
	          <li><a href="#sampleContentD" data-toggle="tab">！！！コメント未完成！！！</a></li>
	        </ul>

				<!-- 内容 -->
			<div class="tab-content ">
				<!--   Aタブ部分    -->
				<div class="tab-pane  active col-md-12" id="sampleContentA">
					<h3 class="my-3">ユーザー紹介</h3>
					<%= @user.introduction %>
				 </div>
				<!--   Aタブ部分    -->


				<!--   Bタブ部分    -->
				<div class="tab-pane col-md-12" id="sampleContentB">
					<h3 class="my-3">フォロー未完成</h3>
				</div>
				<!--   Bタブ部分    -->

				<!--   Cタブ部分    -->
				<div class="tab-pane col-md-12" id="sampleContentC">
					<h3 class="my-3">フォロワー未完成</h3>
				</div>
				<!--   Cタブ部分    -->

				<!--   Cタブ部分    -->
				<div class="tab-pane col-md-12" id="sampleContentD">
					<h3 class="my-3">コメントまだ未完成！</h3>
				</div>
				<!--   Cタブ部分    -->
			  </div>
		</div>
 	</div>
</div>
