<div class="container">
   <div class="col-md-12"> 
		<h1 style="display:inline;">ユーザー情報</h1>
	    <hr>
    </div>
	


	<div class="row product_show">
		<div class="col-md-3 text-center">
			<%= render 'profile' %>
		</div>

	   	<div class="col-md-9">
	        <ul class="nav nav-tabs">
	          <li class="active"><a href="#sampleContentA" data-toggle="tab">ユーザー情報</a></li>
	          <li><a href="#sampleContentB" data-toggle="tab">コメント</a></li>
	        </ul>

				<!-- 内容 -->
			<div class="tab-content ">
				<!--   Aタブ部分    -->
				<div class="tab-pane  active col-md-12" id="sampleContentA">
					<h3 class="my-3">ユーザー紹介</h3>
					<%= @user.introduction %>
				 </div>
				<!--   Aタブ部分    -->
				
				<!--   Bタブ部分    -->
				<div class="tab-pane col-md-12" id="sampleContentB">
					<h3 class="my-3">コメント</h3>
					<table class="table table-hover">
						<tbody>
							<tr>
								<td>FROMイメージ</td>
								<td>TOイメージ</td>
								<td>コメント者</td>
								<td>コメント</td>
								<td>投稿日</td>
								<td>ボタン系</td>
							</tr>
							<%# binding pry %>
							<% @mypage_comments.each do |message| %>
							<tr>
								<td><% @user.from_users.each do |user| %>
								<%= attachment_image_tag user, :profile_image ,size: '100x100'%>
								<%#= user.nickname %>
								<% end %></td>

									<td><% @user.to_users.each do |user| %>
								<%= attachment_image_tag user, :profile_image ,size: '100x100'%>
								<%= user.nickname %>
								<% end %></td>


								<td>メッセージID:<%= message.id %></td>
								<td><%= message.comment %></td>
								<td><%= message.created_at %></td>
								<td></td>
							</tr>
							<% end %>
							<%= form_for @mypage_comment, url:  mypage_comments_path , html: {method: "POST"} do |f| %>
							<tr>
								<td colspan="4"><%=f.text_field :comment, class: "index_contact_form col-xs-10" %>
					            <%= f.hidden_field :from_user_id , value: @user.id , id: "TEST"%></td>
								<td><%= f.submit "送信" ,class: "btn btn-default col-xs-12" %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				<!--   Bタブ部分    -->
			  </div>
		</div>
 	</div>
</div>
