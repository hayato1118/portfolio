<div class="container">
   <div class="col-xs-12"> 
		<h2 class="title-h3">フォロワー一覧</h2>
	    <hr>
    </div>
	<div class="row product_show">
		<div class="col-md-3 text-center">
			<%= render 'profile' %>
		</div>
		
	   	<div class="col-md-9">
	
				<table class="table table-hover t_center">
				<tbody>

					 <% @user.followers.each do |user| %>
					<tr>
						<td class="td_vertical_align_middle"><%= attachment_image_tag user, :profile_image, fallback: "no_image_top.jpg",class: "img-circle img-thumbnail sns_image"  %></td>
						<td class="td_vertical_align_middle"><%= user.nickname %></td>
						<td class="td_vertical_align_middle"><%= link_to 'ユーザー詳細', user_path(user) ,class: "btn btn-default" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
 	</div>
</div>
















